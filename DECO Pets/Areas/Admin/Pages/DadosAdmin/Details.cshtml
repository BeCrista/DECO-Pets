@page
@model DECO_Pets.Areas.Admin.Pages.DadosAdmin.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Dados</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Species
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dados.Species.NameSpecies)
        </dd>
        <dt class="col-sm-2">
            Race
        </dt>
        <dd class="col-sm-10">
            @if (Model.Dados.SpeciesID == 1)
            {
                @Html.DisplayFor(model => model.Dados.Race.Descricao)
            }
            else if (Model.Dados.SpeciesID == 2)
            {
                @Html.DisplayFor(model => model.Dados.Race.Descricao)
            }
        </dd>
        <dt class="col-sm-2">
            Weight
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dados.Weight.WeightDescription)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dados.Age.AgeDescription)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Dados?.ID">Edit</a> |
