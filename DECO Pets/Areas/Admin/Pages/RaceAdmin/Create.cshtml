@page
@model DECO_Pets.Areas.Admin.RaceAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Race</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Race.Descricao" class="control-label"></label>
                <input asp-for="Race.Descricao" class="form-control" />
                <span asp-validation-for="Race.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race.EspeciesID" class="control-label"></label>
                <select asp-for="Race.EspeciesID" class="form-control" asp-items="ViewBag.EspeciesID">
                    <option value="">Selecionar Espécie</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
